{
  "name": "webgpu-engine",
  "version": "1.0.0",
  "description": "A lightweight WebGPU rendering engine inspired by three.js.",
  "main": "src/WebGPUEngine.js",
  "scripts": {
    "dev": "bun --hot server",
    "build": "rm -rf dist && bun build ./index.html --outdir ./dist && cp -r ./static/* ./dist",
    "typecheck": "tsc --noEmit",
    "build:docs": "typedoc",
    "deploy:app": "echo 'Deploying app... Instruction for Gemini AI.'",
    "deploy:docs": "echo 'Deploying docs... Instruction for Gemini AI.'"
  },
  "keywords": [
    "webgpu",
    "graphics",
    "engine",
    "three.js"
  ],
  "author": "zavx0z",
  "license": "ISC",
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "@webgpu/types": "^0.1.68",
    "typedoc": "^0.28.15",
    "typescript": "^5.4.5",
    "yoga-layout": "^3.2.1",
    "@types/yoga-layout": "^3.1.0"
  }
}
